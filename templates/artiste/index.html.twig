{% extends 'base.html.twig' %}

{% block title %}Artiste index{% endblock %}

{% block body %}
    <h1>Artiste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Type</th>
                <th>Resume</th>
                <th>Image</th>
                <th>DateInscription</th>
                <th>DateConnexion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in artistes %}
            <tr>
                <td>{{ artiste.id }}</td>
                <td>{{ artiste.nom }}</td>
                <td>{{ artiste.email }}</td>
                <td>{{ artiste.mdp }}</td>
                <td>{{ artiste.type }}</td>
                <td>{{ artiste.resume }}</td>
                <td>{{ artiste.image }}</td>
                <td>{{ artiste.dateInscription ? artiste.dateInscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ artiste.dateConnexion ? artiste.dateConnexion|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('artiste_show', {'id': artiste.id}) }}">show</a>
                    <a href="{{ path('artiste_edit', {'id': artiste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artiste_new') }}">Create new</a>
{% endblock %}
