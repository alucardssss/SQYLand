{% extends "layout.html.twig" %}

{% block page_title %}
    Inscription
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

{% endblock %}

{% block content %}

            <div class="container">

                <!--******** Bouton retour *********-->
                <!-- 
                    <div class="text-left">
                        <a href="{{ path('artiste_index') }}" class="btn btn-vanille" title="Retour">Retour</a>
                    </div>
                -->



                <h1 class="text-center text-white my-5">Inscription</h1>


                {% for message in app.flashes('notice') %}
                    <div class="alert alert-info">
                        {{ message }}
                    </div>

                {% endfor %}
        

                <!--********* Formulaire **********-->
                <div class="d-md-flex  justify-content-center">

                    <div>
                        {{ form(form, {attr:{novalidate: 'novalidate' }}) }}
                    </div>

                </div>
                


            </div> <!-- /.container -->

        </div> <!-- /.container -->
    </div> <!-- /.container-fluid -->

{% endblock %}

{% block final_javascripts %}
    <script src="https://cdn.ckeditor.com/4.11.1/standard/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js" integrity="sha256-SUaao5Q7ifr2twwET0iyXVy0OVnuFJhGVi5E/dqEiLU=" crossorigin="anonymous"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
